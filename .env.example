###############################################################################
# SECOND BRAIN - Environment Configuration
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to git - it contains secrets!
###############################################################################

# ============================================
# GENERAL
# ============================================
TZ=Europe/London

# ============================================
# N8N - Automation Hub
# ============================================
N8N_PORT=5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_PASSWORD

# Required for Code nodes to access environment variables
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Uncomment and set if using external webhooks (Cloudflare Tunnel, etc.)
# WEBHOOK_URL=https://your-domain.example

# ============================================
# NEXTCLOUD - Calendar
# ============================================
NEXTCLOUD_PORT=8088

# Database credentials (CHANGE THESE!)
NEXTCLOUD_DB_PASSWORD=CHANGE_THIS_DB_PASSWORD
NEXTCLOUD_DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD

# App password for n8n CalDAV access
# Generate in Nextcloud: Settings → Security → Devices & sessions → Create new app password
NEXTCLOUD_PASSWORD=YOUR_NEXTCLOUD_APP_PASSWORD

# ============================================
# OBSIDIAN API - Notes
# ============================================
OBSIDIAN_API_PORT=8765

# ============================================
# SIMPLEX CHAT
# ============================================
SIMPLEX_PORT=5225
SIMPLEX_BOT_NAME=second-brain
SIMPLEX_LOG_LEVEL=warn

# ============================================
# SIMPLEX BRIDGE
# ============================================
# Polling interval (seconds) - how often to check for new messages
SIMPLEX_POLL_SECONDS=2

# WebSocket timeout (seconds)
SIMPLEX_WS_TIMEOUT=10

# Webhook retry settings
SIMPLEX_WEBHOOK_RETRIES=3
SIMPLEX_WEBHOOK_BACKOFF=2

# Health check on startup (1=yes, 0=no)
SIMPLEX_HEALTH_CHECK=1

# Debug WebSocket events (1=yes, 0=no)
SIMPLEX_DEBUG_WS_EVENTS=0

# ============================================
# BACKUP (optional)
# ============================================
# Uncomment and configure for remote backup

# S3-compatible storage (Backblaze B2, Wasabi, MinIO, etc.)
# BACKUP_S3_BUCKET=your-bucket-name
# BACKUP_S3_ENDPOINT=https://s3.us-west-000.backblazeb2.com
# BACKUP_S3_ACCESS_KEY=your-access-key
# BACKUP_S3_SECRET_KEY=your-secret-key

# Local backup retention (days)
# BACKUP_RETENTION_DAYS=30
